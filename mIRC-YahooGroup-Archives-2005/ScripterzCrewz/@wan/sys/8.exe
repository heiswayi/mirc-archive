dialog mayat.sndnotice {
  title "MaYaT Private Notice"
  size -1 -1 280 100
  box "Enter nick",1,5 5 155 45,default
  edit "",2,10 20 145 22
  box "Enter notice",3,5 50 270 45,default
  combo 4,10 65 260 22,edit
  button "&Ok",5,168 20 105 25,ok,disable
}
on 1:dialog:mayat.sndnotice:*:*:{
  if ($devent == init) {
    if (%mayat.nknotice != $null) { did -nrab mayat.sndnotice 2 %mayat.nknotice }
  }
  if ($devent == edit) {
    if ($did == 2) { set %mayat.nknotice $did(2).text }
    if ($did == 4) { set %mayat.notice $did(4).text | did -e $dname 5 }
  }
  if ($devent == sclick) {
    if ($did == 5) {
      if $len(%mayat.notice) > 250 || $len(%mayat.notice) < 1 { %mayat.error = Invalid notice! | error | halt } 
      if $len(%mayat.nknotice) < 1 { %mayat.error = Invalid nick! | error | halt }
      else { 
        .notice %mayat.nknotice 8P11rivate 8N11otice  9 ¥4 %mayat.nknotice 9¥7 [12 %mayat.notice 7] %xrc
        .echo -a $timestamp -> - $+ %mayat.nknotice $+ -  8P11rivate 8N11otice 9 ¥4  %mayat.nknotice 9¥7 [12  %mayat.notice 7] %xrc
        unset %mayat.*
      }
    }
  }
}
