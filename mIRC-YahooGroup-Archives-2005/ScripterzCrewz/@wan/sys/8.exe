#rev on
on *:PART:#: {
  if ( %revolve. [ $+ [ $address($nick,3) ] ] == $null ) { .set -u10 %revolve. [ $+ [ $address($nick,3) ] ] 1 | goto end }
  elseif ( %revolve. [ $+ [ $address($nick,3) ] ] isnum 1-2 ) { .inc -u10 %revolve. [ $+ [ $address($nick,3) ] ] 1 | goto end }
  elseif ( %revolve. [ $+ [ $address($nick,3) ] ] >= 3 ) && ($me isop $chan) { .ignore -cnktu5 $nick $+ *!*@* | .raw -q mode # +b $mask($fulladdress,7) | .unset %revolve.* }
  else { goto end }
  :end
}
#rev end

#xsflo on
